{
  "dataset_reader": {
    "class_name": "dp:T5DatasetReader",
    "name": "{TASK}",
    "train": "train",
    "valid": "validation"
  },
  "dataset_iterator": {
    "class_name": "dp:T5TFDatasetIterator",
    "shuffle": true,
    "seed": 42
  },
  "chainer": {
    "in": ["x"],
    "in_y": ["y"],
    "pipe": [
      {
        "class_name": "dp:TorchTransformersPreprocessor",
        "id": "preprocessor",
        "vocab_file": "t5-base",
        "do_lower_case": false,
        "max_seq_length": 512,
        "reduce_pad": true,
        "in": ["x"],
        "out": ["x_features"]
      },
      {
        "in": ["y"],
        "out": ["y_features"],
        "ref": "preprocessor"
      },
      {
        "class_name": "dp:T5Text2TextModel",
        "pretrained_model": "{PRETRAINED_PATH}",
        "t5_configs_path": ".",
        "finetuning_model_config_path": "./runs/finetuning_model_config.json",
        "check_commit": false,
        "sub_batch_size": 64,
        "max_generation_len": 64,
        "beam_size": 4,
        "save_path": "{MODEL_PATH}/model",
        "load_path": "{MODEL_PATH}/model",
        "optimizer": "Adafactor",
        "optimizer_parameters": {
          "lr": 1e-03,
          "weight_decay": 0.0,
          "scale_parameter": false,
          "relative_step": false,
          "warmup_init": false
        },
        "in": ["x_features"],
        "in_y": ["y_features"],
        "out": ["y_pred"]
      },
      {
        "in": ["y_pred"],
        "out": ["y_pred_id"],
        "class_name": "dp:T5Text2TextPostprocessor",
        "task": "{TASK}",
        "id": "postprocessor"
      },
      {
        "in": ["y"],
        "out": ["y_id"],
        "ref": "postprocessor"
      }
    ],
    "out": ["y_pred", "y_pred_id"]
  },
  "train": {
    "batch_size": 128,
    "class_name": "torch_trainer",
    "evaluation_targets": ["valid"],
    "log_every_n_batches": 500,
    "val_every_n_batches": 5000,
    "max_batches": 100000,
    "metrics": [
      
      {
        "name": "t5_squad_f1",
        "inputs": ["y_id", "y_pred_id"]
      },
      {
        "name": "t5_squad_em",
        "inputs": ["y_id", "y_pred_id"]
      }
    ],
    "save_every_n_batches": 2000,
    "show_examples": false,
    "validate_first": false,
    "validation_patience": -1,
    "pytest_max_batches": 2,
    "start_from_batch": -1,
    "tensorboard_log_dir": "{MODEL_PATH}/"
  },
  "metadata": {
    "imports": ["dp"],
    "variables": {
      "ROOT_PATH": "~/.deeppavlov",
      "DOWNLOADS_PATH": "{ROOT_PATH}/downloads",
      "PRETRAINED_PATH": "./runs/wm_128_test/",
      "MODEL_PATH": "{PRETRAINED_PATH}/hotpotqa/bs_128",
      "TASK": "hotpotqa_context"
    },
    "requirements": [
      "{DEEPPAVLOV_PATH}/requirements/pytorch.txt",
      "{DEEPPAVLOV_PATH}/requirements/transformers.txt"
    ]
  }
}
